{
  "name": "@jam3/library",
  "version": "1.0.0",
  "description": "[Description]",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --watch",
    "test-ci": "jest --ci && npm run linters && npm run size",
    "size": "size-limit",
    "linters": "eslint './src/**/*.js'"
  },
  "keywords": [
    "library"
  ],
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.5.0"
  },
  "repository": "git+https://github.com/Jam3/library.git",
  "bugs": {
    "url": "https://github.com/Jam3/library/issues"
  },
  "homepage": "https://github.com/Jam3/library#readme",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "7.5.0",
    "@commitlint/config-conventional": "7.5.0",
    "babel-eslint": "10.0.1",
    "envinfo": "6.0.1",
    "eslint": "5.13.0",
    "eslint-config-jam3": "2.0.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.2.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4",
    "size-limit": "0.21.1"
  },
  "size-limit": [
    {
      "limit": "5 KB",
      "path": "src/index.js"
    }
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "__tests__/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Pre-commit checks...' && lint-staged",
      "pre-push": "echo 'Pre-push checks...' && npm run test-ci",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
